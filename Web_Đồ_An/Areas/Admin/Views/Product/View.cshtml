@model Web_Đồ_An.Models.Product
@using X.PagedList;
@{
    ViewBag.Title = "Xem sản phẩm   ";

}
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title </a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-body">
            <div class="row" style="margin-bottom: 2rem;">
                <div class="col-md-3">
                    <img src="@Model.Image" class="product-image" alt="Model.ProductName" style="width: 100px !important;">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã sản phẩm</label>
                        <p class="form-control">@Model.ProductCode</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tên Sản phẩm</label>
                        <p class="form-control">@Model.Title</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Danh Mục</label>
                        <p class="form-control">@Model.ProductCategory.Title</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Alias</label>
                        <p class="form-control">@Model.Alias</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Số lượng</label>
                        <p class="form-control">@Model.Quantity</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <p class="form-control">@string.Format("{0:dd/MM/yyy}", Model.CreatedDate)</p>
                    </div>
                </div>
            </div>
            <div class="row">
               
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Giá nhập</label>
                        <p class="form-control">@Model.OriginalPrice</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Giá bán</label>
                        <p class="form-control">@Model.Price</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Giá khuyến mãi</label>
                        <p class="form-control">@Model.PriceSale</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Mô tả</label>
                        <p class="form-control">@Model.Description</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Chi tiết sản phẩm</label>
                        <p class="form-control">
                            @Model.Detail
                        </p>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-danger">Quay lại</a>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->